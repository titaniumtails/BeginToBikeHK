<!DOCTYPE html>
<html>
<head>
  <title>BeginToBikeHK</title>

  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css' %>
  <%= stylesheet_link_tag '/animate.css' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>

<body>
  <nav class="navbar navbar-default navbar-fixed-top navcolor" role="navigation">
    <div class="fluid-container">
      <%= link_to root_path, class: 'navbar-left' do
        image_tag 'BikeHKtight.png', id:'bikelogo' 
      end %>
      <div id="coggie1"><i class="fa fa-cog fa-spin"></i></div>
      <div id="coggie2"><i class="fa fa-cog fa-spin"></i></div>
      <%= link_to "Tips", tips_path, class: "navbar-left menuthings" %>
        <% if user_signed_in? %>
          <%= link_to "Log Out",  destroy_user_session_path, :method => :delete,  class: "navbar-right top-button" %>
        <% else %>
          <%= link_to "Log In",  new_user_session_path,      class: "navbar-right top-button" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "navbar-right top-button signup" %>
        <% end %>
    </div>
  </nav>

    <% if flash[:notice] %> <div class="alert alert-success" role="alert"><%= flash[:notice] %></div> <% end %>
    <% if flash[:alert]  %> <div class="alert alert-danger" role="alert"> <%= flash[:alert] %></div>  <% end %>

    <%= yield %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' %>
  <%= javascript_include_tag '//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry' %>
  <%= javascript_include_tag '//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' %>
  <%= javascript_include_tag 'kerning.js' %>
  <br />
  <br />
  <br />
  <footer>
    <p><span class="logo2small">Â© </span><span class="logo1small">Bike </span><span class="logo2small">HK &nbsp;</span></p>
  </footer>

</body>
</html>
